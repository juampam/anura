#!/bin/bash

ans="$1"
export ans
case $ans in
        "create")
               cat << EOF > commands/index.py
#!/usr/bin/python3 -tt

def getTitle():
	title = "$2"
	return title
def getStyle():
	style = "$3"
	return style

EOF
chmod 770 commands/index.py
#chmod 770 commands/functions.py
./commands/index.py
./commands/functions.py
exit 0
mv $2 folder
                ;;
        "help")
                echo "Anura usage:"
		echo "anura <command> <arguments>"
		echo "create <name> <style>"
                ;;
	"rename")
		mv $2 $3
		;;
	"delete")
		rm -rf $2
		;;
esac

